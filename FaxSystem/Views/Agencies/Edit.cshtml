@model FaxSystem.Models.Agency

@{
    ViewData["Title"] = "Edit";
}

<h3>تعـــديل الجهة</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="form-label col">اسـم الجهة</label>
                <input asp-for="Name" class="col form-control" />
                 <br />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ التعديل" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Create">العوده لقائمة الجهات</a>
</div>

