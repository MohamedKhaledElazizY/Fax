@if (TempData["faxid"] != null)
{
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
<script>
    var connection11 = new signalR.HubConnectionBuilder().withUrl("/cHub").build();
    
    connection11.start().then(function () {
    
            connection11.invoke("SendMessage", @TempData["faxid"].ToString(), @int.Parse(@TempData["faxtype"].ToString())).catch(function (err) {
                return console.error(err.toString());
            });
        
    }).catch(function (err) {
        return console.error(err.toString());
    });
</script>}