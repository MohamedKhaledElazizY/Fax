@model FaxSystem.Models.User

<!DOCTYPE html>

<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
    <link rel="icon" href="~/logo.png" />
    <title>تسجيل مستخدم - منظومة الفاكسات</title>
</head>

<body>
    <div class="register__body">
        <main class="register__main container-md" w-100 m-auto">
            <form class="register__form" asp-controller="Register" asp-action="Register" method="post">
                <img src="~/logo.png" alt="شعار كلية الضباط الاحتياط" class="mb-3 mt-3 m-auto">
                <partial name="_ResultMessage" />

                <label class="mb-1" for="UserName">اسم المستخدم</label>
                <input class="form-control mb-2" type="text" asp-for="UserName" id="UserName" />
                <span asp-validation-for="UserName" class="text-danger mb-1"></span>

                <label class="mb-1" for="Password">كلمة المرور</label>
                <input class="form-control mb-2" type="password" asp-for="Password" id="Password" />
                <span asp-validation-for="Password" class="text-danger mb-1"></span>

                <label class="mb-1" for="ConfirmPassword">تأكيد كلمة المرور</label>
                <input class="form-control mb-2" type="password" asp-for="ConfirmPassword" id="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger mb-1"></span>

                <label class="mb-1" for="Branch">الفرع</label>
                <select asp-for="BranchID" class="form-select mb-2" asp-items="ViewBag.ListOfBranches" id="BranchID">
                    <option value="-1">اختر الفرع</option>
                </select>
                <span asp-validation-for="BranchID" class="text-danger mb-1"></span>

                <button type="submit" class="w-100 btn btn-dark text-white mb-3">انشاء حساب</button>
            </form>
        </main>
    </div>

</body>

</html>
